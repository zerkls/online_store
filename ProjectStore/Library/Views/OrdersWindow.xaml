<Window x:Class="ProjectStore.Views.OrdersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ProjectStore.ViewModels"
        xmlns:conv="clr-namespace:ProjectStore.Converters"
        xmlns:models="clr-namespace:ProjectStore.Models"
        mc:Ignorable="d"
        Title="История заказов" Height="700" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="#F5F7FA">

    <Window.Resources>
		<conv:BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
		<conv:InvertedBoolToVisibilityConverter x:Key="InvertedBoolToVisibility"/>
		<conv:OrderStatusToColorConverter x:Key="OrderStatusToColor"/>
        <!-- Стиль для элементов списка заказов -->
        <Style x:Key="OrderItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,2"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E1E8ED"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E3F2FD"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#2196F3"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F8F9FA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для кнопок -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#2C3E50" CornerRadius="8" Padding="15" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock Text="📋" FontSize="24" Margin="0,0,10,0"/>
                    <TextBlock Text="История заказов" FontSize="20" FontWeight="Bold"
                               Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>

                <TextBlock Grid.Column="1" Text="{Binding OrdersSummary}"
                           FontSize="14" Foreground="White" VerticalAlignment="Center"
                           FontWeight="SemiBold"/>
            </Grid>
        </Border>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Список заказов -->
            <Border Grid.Column="0" Background="White" CornerRadius="8"
                    BorderBrush="#E1E8ED" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок списка -->
                    <Border Grid.Row="0" Background="#F8F9FA" CornerRadius="8,8,0,0"
                            BorderBrush="#E1E8ED" BorderThickness="0,0,0,1"
                            Padding="15,10">
                        <TextBlock Text="Ваши заказы" FontSize="16" FontWeight="Bold"
                                   Foreground="#2C3E50"/>
                    </Border>

                    <!-- Список -->
                    <ListBox Grid.Row="1" ItemsSource="{Binding Orders}"
                             SelectedItem="{Binding SelectedOrder}"
                             ItemContainerStyle="{StaticResource OrderItemStyle}"
                             Background="Transparent" BorderThickness="0"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             Padding="10">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Номер заказа и дата -->
                                    <TextBlock Grid.Row="0" Text="{Binding OrderInfo}"
                                               FontWeight="Bold" FontSize="13"
                                               Margin="0,0,0,4"/>

                                    <!-- Статус с цветовой индикацией -->
                                    <Border Grid.Row="1"
                                            Background="{Binding Status, Converter={StaticResource OrderStatusToColor}}"
                                            CornerRadius="3" Padding="4,2" HorizontalAlignment="Left"
                                            Margin="0,0,0,4">
                                        <TextBlock Text="{Binding StatusDescription}"
                                                   FontSize="10" FontWeight="SemiBold"
                                                   Foreground="White"/>
                                    </Border>

                                    <!-- Количество товаров -->
                                    <TextBlock Grid.Row="2" Text="{Binding Items.Count, StringFormat={}Товаров: {0}}"
                                               FontSize="11" Foreground="Gray"
                                               Margin="0,0,0,2"/>

                                    <!-- Способ оплаты -->
                                    <TextBlock Grid.Row="3"
                                               Text="{Binding PaymentMethod.PaymentType, StringFormat={}Оплата: {0}}"
                                               FontSize="11" Foreground="Gray"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>

                        <ListBox.Template>
                            <ControlTemplate>
                                <ScrollViewer Padding="0" Background="Transparent">
                                    <ItemsPresenter/>
                                </ScrollViewer>
                            </ControlTemplate>
                        </ListBox.Template>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Разделитель -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch"
                         Background="Transparent"/>

            <!-- Детали заказа -->
            <Border Grid.Column="2" Background="White" CornerRadius="8"
                    BorderBrush="#E1E8ED" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок деталей -->
                    <Border Grid.Row="0" Background="#F8F9FA" CornerRadius="8,8,0,0"
                            BorderBrush="#E1E8ED" BorderThickness="0,0,0,1"
                            Padding="15,10">
                        <TextBlock Text="Детали заказа" FontSize="16" FontWeight="Bold"
                                   Foreground="#2C3E50"/>
                    </Border>

                    <!-- Детальная информация -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="15">
                        <StackPanel>
                            <!-- Сообщение при отсутствии выбора -->
                            <TextBlock Text="Выберите заказ для просмотра деталей"
                                       FontStyle="Italic" Foreground="Gray" FontSize="14"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       TextAlignment="Center" Margin="20"
                                       Visibility="{Binding IsOrderSelected, 
                                           Converter={StaticResource InvertedBoolToVisibility}}"/>

                            <!-- Детали выбранного заказа -->
                            <StackPanel Visibility="{Binding IsOrderSelected, 
                                                Converter={StaticResource BoolToVisibility}}">
                                <!-- Основная информация -->
                                <Border Background="#F8F9FA" CornerRadius="6" Padding="12"
                                        Margin="0,0,0,15">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Номер:"
                                                   FontWeight="SemiBold" Margin="0,0,10,5"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedOrder.Id}"
                                                   Margin="0,0,0,5"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Дата:"
                                                   FontWeight="SemiBold" Margin="0,0,10,5"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1"
                                                   Text="{Binding SelectedOrder.OrderDate, StringFormat={}dd.MM.yyyy HH:mm}"
                                                   Margin="0,0,0,5"/>

                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Статус:"
                                                   FontWeight="SemiBold" Margin="0,0,10,5"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1"
                                                   Text="{Binding SelectedOrder.StatusDescription}"
                                                   Margin="0,0,0,5"/>

                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Оплата:"
                                                   FontWeight="SemiBold" Margin="0,0,10,0"/>
                                        <TextBlock Grid.Row="3" Grid.Column="1"
                                                   Text="{Binding SelectedOrder.PaymentMethod.PaymentType}"
                                                   Margin="0,0,0,0"/>
                                    </Grid>
                                </Border>

                                <!-- Состав заказа -->
                                <TextBlock Text="Состав заказа:" FontSize="14" FontWeight="Bold"
                                           Margin="0,0,0,10" Foreground="#2C3E50"/>

                                <ItemsControl ItemsSource="{Binding SelectedOrder.Items}"
                                              Margin="0,0,0,15">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="#F0F0F0" BorderThickness="0,0,0,1"
                                                    Padding="8,6">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0" Text="{Binding Product.Name}"
                                                               FontWeight="SemiBold" VerticalAlignment="Center"/>
                                                    <TextBlock Grid.Column="1" Text="{Binding Quantity}"
                                                               Margin="10,0" VerticalAlignment="Center"
                                                               Foreground="Gray" MinWidth="30"/>
                                                    <TextBlock Grid.Column="2" Text="×"
                                                               Margin="0,0,5,0" VerticalAlignment="Center"
                                                               Foreground="Gray"/>
                                                    <TextBlock Grid.Column="3" Text="{Binding UnitPrice, StringFormat={}{0:C}}"
                                                               VerticalAlignment="Center" MinWidth="70"
                                                               Foreground="Gray" TextAlignment="Right"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Итоговая стоимость -->
                                <Border Background="#E8F5E8" CornerRadius="6" Padding="12"
                                        BorderBrush="#C8E6C9" BorderThickness="1">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Подитог:"
                                                   Margin="0,0,0,3"/>
                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Скидка:"
                                                   Margin="0,0,0,3" Foreground="Green"/>
                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Итого:"
                                                   FontWeight="Bold" FontSize="14"/>

                                        <TextBlock Grid.Row="0" Grid.Column="1"
                                                   Text="{Binding SelectedOrder.Subtotal, StringFormat={}{0:C}}"
                                                   Margin="0,0,0,3"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1"
                                                   Text="{Binding SelectedOrder.DiscountAmount, StringFormat={}{0:C}}"
                                                   Margin="0,0,0,3" Foreground="Green"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1"
                                                   Text="{Binding SelectedOrder.TotalAmount, StringFormat={}{0:C}}"
                                                   FontWeight="Bold" FontSize="14"/>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Кнопка отмены заказа -->
                    <Border Grid.Row="2" Background="#F8F9FA" CornerRadius="0,0,8,8"
                            BorderBrush="#E1E8ED" BorderThickness="0,1,0,0"
                            Padding="15,10">
                        <Button Content="❌ Отменить заказ"
                                Command="{Binding CancelOrderCommand}"
                                Width="150" Height="35"
                                Background="#E74C3C" Foreground="White"
                                FontWeight="SemiBold" FontSize="12"
                                Style="{StaticResource ModernButtonStyle}"
                                ToolTip="Отменить выбранный заказ (если возможно)"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Кнопка закрытия -->
        <Border Grid.Row="2" Background="White" CornerRadius="8"
                BorderBrush="#E1E8ED" BorderThickness="1"
                Padding="15" Margin="0,15,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="💡 Для отмены заказа выберите его в списке и нажмите кнопку 'Отменить заказ'"
                           FontSize="11" Foreground="Gray" VerticalAlignment="Center"/>

                <Button Grid.Column="1" Content="Закрыть" Command="{Binding CloseCommand}"
                        Width="100" Height="35"
                        Background="#3498DB" Foreground="White" FontWeight="SemiBold"
                        Style="{StaticResource ModernButtonStyle}"/>
            </Grid>
        </Border>
    </Grid>
</Window>