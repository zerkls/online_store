<Window x:Class="ProjectStore.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ProjectStore.ViewModels"
        xmlns:converters="clr-namespace:ProjectStore.Converters"
        mc:Ignorable="d"
        Title="Интернет-магазин" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#2C3E50" CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="🛍️" FontSize="28" Foreground="White" Margin="0,0,10,0"/>
                <TextBlock Text="Интернет-магазин" FontSize="24" FontWeight="Bold"
                           Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Левая часть - каталог товаров -->
            <Border Grid.Column="0" Background="White" CornerRadius="8"
                    BorderBrush="#E1E8ED" BorderThickness="1" Margin="0,0,10,0">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Панель поиска и фильтров -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Width="200" Height="30" Padding="8,6"
                                 FontSize="12" VerticalContentAlignment="Center"/>
                        <Button Content="🔍" Command="{Binding SearchCommand}"
                                Width="40" Height="30" Margin="5,0"
                                ToolTip="Поиск"/>
                        <Button Content="❌" Command="{Binding ClearSearchCommand}"
                                Width="40" Height="30"
                                ToolTip="Очистить поиск"/>
                    </StackPanel>

                    <!-- Фильтр по категориям -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Категория:" FontWeight="SemiBold"
                                   VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox ItemsSource="{Binding Categories}"
                                  SelectedItem="{Binding SelectedCategory}"
                                  DisplayMemberPath="Name"
                                  Width="200" Height="30"/>
                    </StackPanel>

                    <!-- Список товаров -->
                    <Border Grid.Row="2" BorderBrush="#E1E8ED" BorderThickness="1"
								CornerRadius="4" Margin="0,0,0,10">
                        <ListBox x:Name="lstProducts"
								 ItemsSource="{Binding FilteredProducts}"
								 SelectedItem="{Binding SelectedProduct}"
								 FontSize="13" Background="White"
								 ScrollViewer.VerticalScrollBarVisibility="Auto"
								 BorderThickness="0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DisplayInfo}"
											  ToolTip="{Binding Details}"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="8"/>
                                    <Setter Property="Margin" Value="2"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#E3F2FD"/>
                                            <Setter Property="BorderBrush" Value="#2196F3"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </Border>

                    <!-- Детали товара -->
                    <Border Grid.Row="3" Background="#F8F9FA" BorderBrush="#E1E8ED"
							BorderThickness="1" CornerRadius="4" Padding="12">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="{Binding SelectedProduct.Details}"
									 TextWrapping="Wrap" FontSize="11" LineHeight="16"
									 Visibility="{Binding IsProductSelected, 
                     Converter={StaticResource BoolToVisibility}}"/>
                            <TextBlock Grid.Row="0" Text="Выберите товар для просмотра деталей"
									 FontStyle="Italic" Foreground="Gray"
									 HorizontalAlignment="Center" VerticalAlignment="Center"
									 Visibility="{Binding IsProductSelected, 
                     Converter={StaticResource InvertedBoolToVisibility}}"/>

                            <!-- Кнопка добавления в корзину -->
                            <Button Grid.Row="1" Content="➕ Добавить в корзину"
									Command="{Binding AddToCartCommand}"
									Height="30" Background="#27AE60" Foreground="White"
									FontSize="12" FontWeight="SemiBold"
									Style="{StaticResource ModernButtonStyle}"
									Margin="0,10,0,0"
									Visibility="{Binding IsProductSelected, 
                    Converter={StaticResource BoolToVisibility}}"/>
                        </Grid>
                    </Border>

                </Grid>
            </Border>

            <!-- Правая часть - корзина -->
            <Border Grid.Column="1" Background="White" CornerRadius="8"
                    BorderBrush="#E1E8ED" BorderThickness="1">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок корзины -->
                    <TextBlock Grid.Row="0" Text="🛒 Корзина покупок"
                               FontSize="16" FontWeight="Bold"
                               Margin="0,0,0,10" Foreground="#2C3E50"/>

                    <!-- Список товаров в корзине -->
                    <Border Grid.Row="1" BorderBrush="#E1E8ED" BorderThickness="1"
									CornerRadius="4" Margin="0,0,0,10">
                        <ListBox x:Name="lstCart"
								 ItemsSource="{Binding CartItems}"
								 FontSize="11" Background="White"
								 ScrollViewer.VerticalScrollBarVisibility="Auto"
								 BorderThickness="0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DisplayInfo}"
											  ToolTip="{Binding DetailedInfo}"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="6"/>
                                    <Setter Property="Margin" Value="1"/>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </Border>

                    <!-- Управление корзиной -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal"
								HorizontalAlignment="Center" Margin="0,0,0,10">
                        <Button Content="+" Command="{Binding IncreaseQuantityCommand}"
								CommandParameter="{Binding SelectedItem, ElementName=lstCart}"
								Width="32" Height="32" FontSize="14" FontWeight="Bold"
								ToolTip="Увеличить количество"
								Style="{StaticResource ModernButtonStyle}"/>
                        <Button Content="-" Command="{Binding DecreaseQuantityCommand}"
								CommandParameter="{Binding SelectedItem, ElementName=lstCart}"
								Width="32" Height="32" FontSize="14" FontWeight="Bold" Margin="5,0"
								ToolTip="Уменьшить количество"
								Style="{StaticResource ModernButtonStyle}"/>
                        <Button Content="🗑️" Command="{Binding RemoveFromCartCommand}"
								CommandParameter="{Binding SelectedItem, ElementName=lstCart}"
								Width="32" Height="32" FontSize="12"
								ToolTip="Удалить из корзины"
								Style="{StaticResource ModernButtonStyle}"/>
                    </StackPanel>

                    <!-- Итоги и действия -->
                    <StackPanel Grid.Row="3">
                        <TextBlock Text="{Binding CartSummary}" FontWeight="Bold"
                                   FontSize="13" Margin="0,0,0,10"
                                   HorizontalAlignment="Center" Foreground="#2C3E50"/>

                        <Button Content="✅ Оформить заказ" Command="{Binding CheckoutCommand}"
                                Height="36" Background="#27AE60" Foreground="White"
                                FontWeight="Bold" FontSize="13"
                                Style="{StaticResource ModernButtonStyle}"
                                IsEnabled="{Binding IsCartEmpty, Converter={StaticResource InverseBool}}"/>

                        <Button Content="📋 История заказов" Command="{Binding ViewOrderHistoryCommand}"
                                Height="30" Margin="0,5,0,0" Background="#3498DB" Foreground="White"
                                FontSize="12"
                                Style="{StaticResource ModernButtonStyle}"
                                IsEnabled="{Binding HasOrders}"/>

                        <Button Content="🧹 Очистить корзину" Command="{Binding ClearCartCommand}"
                                Height="30" Margin="0,5,0,0" Background="#E74C3C" Foreground="White"
                                FontSize="12"
                                Style="{StaticResource ModernButtonStyle}"
                                IsEnabled="{Binding IsCartEmpty, Converter={StaticResource InverseBool}}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Статусная строка -->
        <Border Grid.Row="2" Background="#D5EDDA" BorderBrush="#27AE60"
                BorderThickness="1" CornerRadius="4" Padding="10,6" Margin="0,10,0,0">
            <TextBlock Text="{Binding StatusMessage}" Foreground="#155724"
                       HorizontalAlignment="Center" FontSize="12" FontWeight="Medium"/>
        </Border>
    </Grid>

    <Window.Resources>
		<converters:BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
		<converters:InverseBooleanConverter x:Key="InverseBool"/>
        <!-- Стили для кнопок -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
								Background="{TemplateBinding Background}"
								CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
											  VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
</Window>