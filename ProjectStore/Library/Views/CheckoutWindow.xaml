<Window x:Class="WpfShopApp.Views.CheckoutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:WpfShopApp.ViewModels"
        xmlns:conv="clr-namespace:WpfShopApp.Converters"
        mc:Ignorable="d"
        Title="Оформление заказа" Height="650" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F7FA">

    <Window.Resources>
        <conv:BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <conv:BooleanToVisibilityConverter x:Key="InvertedBoolToVisibility" IsInverted="True"/>

        <!-- Простой и надежный стиль для TextBox с подсказкой -->
        <Style x:Key="TextBoxWithHintStyle" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <!-- Стиль для кнопок -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="✅" FontSize="24" Margin="0,0,10,0"/>
                <TextBlock Text="Оформление заказа" FontSize="20" FontWeight="Bold"
                           Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Основное содержимое -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Информация о заказе -->
                <Border Background="White" BorderBrush="#E1E8ED"
                        BorderThickness="1" Padding="15" Margin="0,0,0,15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="📦 Состав заказа"
                                   FontSize="16" FontWeight="Bold"
                                   Margin="0,0,0,10" Foreground="#2C3E50"/>

                        <!-- Список товаров -->
                        <ItemsControl Grid.Row="1" ItemsSource="{Binding CartItems}"
                                      Margin="0,0,0,15">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#F0F0F0" BorderThickness="0,0,0,1"
                                            Padding="10,5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="{Binding Product.Name}"
                                                       FontWeight="SemiBold" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Quantity}"
                                                       Margin="10,0" VerticalAlignment="Center"
                                                       Foreground="Gray"/>
                                            <TextBlock Grid.Column="2" Text="{Binding TotalPrice, StringFormat={}{0:C}}"
                                                       FontWeight="Bold" VerticalAlignment="Center"
                                                       MinWidth="80" TextAlignment="Right"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Итоги -->
                        <StackPanel Grid.Row="2">
                            <Border BorderBrush="#E1E8ED" BorderThickness="0,1,0,0"
                                    Padding="10,5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Подитог:"
                                               HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Скидка:"
                                               HorizontalAlignment="Right"
                                               Foreground="Green"/>
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Итого:"
                                               FontWeight="Bold" FontSize="14"
                                               HorizontalAlignment="Right"/>

                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Subtotal, StringFormat={}{0:C}}"
                                               HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding DiscountAmount, StringFormat={}{0:C}}"
                                               HorizontalAlignment="Right"
                                               Foreground="Green"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding TotalAmount, StringFormat={}{0:C}}"
                                               FontWeight="Bold" FontSize="14"
                                               HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Информация о покупателе -->
                <Border Background="White" BorderBrush="#E1E8ED"
                        BorderThickness="1" Padding="15" Margin="0,0,0,15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="👤 Информация о покупателе"
                                   FontSize="16" FontWeight="Bold"
                                   Margin="0,0,0,15" Foreground="#2C3E50"/>

                        <!-- Имя -->
                        <TextBlock Grid.Row="1" Text="Имя и фамилия:"
                                   FontSize="11" FontWeight="SemiBold"
                                   Margin="0,0,0,5" Foreground="#666"/>
                        <TextBox Grid.Row="2" Text="{Binding CurrentCustomer.Name}"
                                 Style="{StaticResource TextBoxWithHintStyle}"
                                 Margin="0,0,0,10"/>

                        <!-- Email -->
                        <TextBlock Grid.Row="3" Text="Email:"
                                   FontSize="11" FontWeight="SemiBold"
                                   Margin="0,0,0,5" Foreground="#666"/>
                        <TextBox Grid.Row="4" Text="{Binding CurrentCustomer.Email}"
                                 Style="{StaticResource TextBoxWithHintStyle}"
                                 Margin="0,0,0,10"/>

                        <!-- Телефон -->
                        <TextBlock Grid.Row="5" Text="Телефон:"
                                   FontSize="11" FontWeight="SemiBold"
                                   Margin="0,0,0,5" Foreground="#666"/>
                        <TextBox Grid.Row="6" Text="{Binding CurrentCustomer.Phone}"
                                 Style="{StaticResource TextBoxWithHintStyle}"/>
                    </Grid>
                </Border>

                <!-- Способ оплаты -->
                <Border Background="White" BorderBrush="#E1E8ED"
						BorderThickness="1" Padding="15">
                    <StackPanel>
                        <TextBlock Text="💳 Способ оплаты"
								   FontSize="16" FontWeight="Bold"
								   Margin="0,0,0,15" Foreground="#2C3E50"/>

                        <TextBlock Text="Выберите способ оплаты:"
								   FontSize="11" FontWeight="SemiBold"
								   Margin="0,0,0,5" Foreground="#666"/>

                        <ComboBox ItemsSource="{Binding PaymentMethods}"
								  SelectedItem="{Binding SelectedPaymentMethod}"
								  DisplayMemberPath="DisplayName"
								  Height="35" FontSize="12"
								  Margin="0,0,0,15"/>

                        <!-- Поля для банковской карты -->
                        <Border Background="#F8F9FA" Padding="15"
                                BorderBrush="#E1E8ED" BorderThickness="1"
                                Visibility="{Binding IsCardPayment, 
                                    Converter={StaticResource BoolToVisibility}}">
                            <StackPanel>
                                <TextBlock Text="Данные банковской карты"
                                           FontWeight="SemiBold" Margin="0,0,0,10"/>

                                <TextBlock Text="Номер карты:"
                                           FontSize="11" FontWeight="SemiBold"
                                           Margin="0,0,0,5" Foreground="#666"/>
                                <TextBox Text="{Binding CardNumber}"
                                         Style="{StaticResource TextBoxWithHintStyle}"
                                         Margin="0,0,0,8"/>

                                <TextBlock Text="Держатель карты:"
                                           FontSize="11" FontWeight="SemiBold"
                                           Margin="0,0,0,5" Foreground="#666"/>
                                <TextBox Text="{Binding CardHolder}"
                                         Style="{StaticResource TextBoxWithHintStyle}"
                                         Margin="0,0,0,8"/>

                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Срок действия:"
                                                   FontSize="11" FontWeight="SemiBold"
                                                   Margin="0,0,0,5" Foreground="#666"/>
                                        <TextBox Text="{Binding ExpiryDate}"
                                                 Style="{StaticResource TextBoxWithHintStyle}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="CVV:"
                                                   FontSize="11" FontWeight="SemiBold"
                                                   Margin="0,0,0,5" Foreground="#666"/>
                                        <TextBox Text="{Binding CVV}"
                                                 Style="{StaticResource TextBoxWithHintStyle}"/>
                                    </StackPanel>
                                </Grid>

                                <TextBlock Text="💡 Это демо-приложение. Данные карты не сохраняются."
                                           FontSize="10" Foreground="Gray"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>

                        <!-- Поля для электронного кошелька -->
                        <Border Background="#F8F9FA" Padding="15"
                                BorderBrush="#E1E8ED" BorderThickness="1"
                                Visibility="{Binding IsEWalletPayment, 
                                    Converter={StaticResource BoolToVisibility}}">
                            <StackPanel>
                                <TextBlock Text="Данные электронного кошелька"
                                           FontWeight="SemiBold" Margin="0,0,0,10"/>

                                <TextBlock Text="Номер телефона:"
                                           FontSize="11" FontWeight="SemiBold"
                                           Margin="0,0,0,5" Foreground="#666"/>
                                <TextBox Text="{Binding PhoneNumber}"
                                         Style="{StaticResource TextBoxWithHintStyle}"/>

                                <TextBlock Text="💡 Оплата будет произведена через выбранную платежную систему."
                                           FontSize="10" Foreground="Gray"
                                           TextWrapping="Wrap" Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Информация о наличных -->
                        <Border Background="#F8F9FA" Padding="15"
							BorderBrush="#E1E8ED" BorderThickness="1"
							Visibility="{Binding IsCashPayment, 
								Converter={StaticResource BoolToVisibility}}">
                            <TextBlock Text="💵 Оплата производится наличными при получении заказа. 
Курьер предоставит вам чек и сдачу."
                                       FontSize="12" Foreground="#666"
                                       TextWrapping="Wrap" LineHeight="18"/>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопки действий -->
        <Border Grid.Row="2" Background="White"
                BorderBrush="#E1E8ED" BorderThickness="1"
                Padding="15" Margin="0,15,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="✅ Проверьте правильность введенных данных"
                           FontSize="11" Foreground="Gray" VerticalAlignment="Center"/>

                <Button Grid.Column="1" Content="Отмена" Command="{Binding CancelCommand}"
                        Width="100" Height="35" Margin="0,0,10,0"
                        Background="#95A5A6" Foreground="White" FontWeight="SemiBold"
                        Style="{StaticResource ModernButtonStyle}"/>

                <Button Grid.Column="2" Content="Оформить заказ" Command="{Binding CompleteOrderCommand}"
                        Width="150" Height="35"
                        Background="#27AE60" Foreground="White" FontWeight="Bold"
                        Style="{StaticResource ModernButtonStyle}"/>
            </Grid>
        </Border>
    </Grid>
</Window>